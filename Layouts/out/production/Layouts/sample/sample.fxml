<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<!--hgap and vgap determine gaps between rows-->
<?import javafx.scene.layout.ColumnConstraints?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
          gridLinesVisible="true">
<!--Default is row 0 column 0 - items appear centered on application -->
    <columnConstraints>
<!--Sets the initial width of each column-->
        <ColumnConstraints percentWidth="50.0"/>
        <ColumnConstraints percentWidth="50.0"/>
    </columnConstraints>
    <Button text="Button One" GridPane.rowIndex="0" GridPane.columnIndex="0"></Button>
    <Button text="Button Two" GridPane.rowIndex="0" GridPane.columnIndex="1"></Button>
    <Button text="Button Three" GridPane.rowIndex="1" GridPane.columnIndex="0"></Button>
    <Button text="Really Long Text Button Four More Text Here More Text Here More Text Here" GridPane.rowIndex="1" GridPane.columnIndex="1"></Button>
    <Button text="Button Five" GridPane.rowIndex="2" GridPane.columnIndex="0"></Button>
</GridPane>